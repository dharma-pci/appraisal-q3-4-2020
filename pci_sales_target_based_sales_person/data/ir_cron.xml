<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--  Send mail Sales Target -->
        <record id="ir_cron_mail_sales_target" model="ir.cron">
            <field name="name">Sale: Sales Target Detail Weekly</field>
            <field name="active" eval="True"/>
            <field name="model_id" ref="model_sales_target"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">7</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="(DateTime.now().replace(hour=1, minute=0,second=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')" />
            <field name="numbercall">-1</field>
            <field name="priority">1</field>
            <field name="state">code</field>
            <field name="code" eval="'model.schedule_mail_sales_target()'"/>
        </record>
    </data>
</odoo>
