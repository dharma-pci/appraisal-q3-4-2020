<odoo>
    <record model="ir.ui.view" id="sale_limit_form_view">
        <field name="name">Sale Limit Form View</field>
        <field name="model">sale.order</field>
        <field name='priority'>999</field>
        <field name="arch" type="xml">
            <form string="Customer Credit Limit Info">
                <header></header>
                <sheet>
                    <group>
                        <field name="company_id" invisible="1"/>
                        <!-- START HERE -->
                        <!-- YOU CAN ERASE THIS SYNTAX -->
                        <field name="partner_id" readonly="1"/> 
                        <field name="credit_limit" /> 
                        <field name="unpaid_amount"/>
                        <field name="exceeded_amount"/>
                        <field name="state" invisible="1"/>
                    </group>
                    <group>
                        <field name="unpaid_invoice_ids" attrs="{'invisible':[('unpaid_invoice_ids','=',[])]}">
                            <tree>
                                
                                <field name="partner_id"/>
                                <field name="invoice_date"/>
                                <field name="name"/>
                                <field name="company_id"/>
                                <field name="invoice_date_due"/>
                                <field name="invoice_origin"/>

                                <field name="state"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button string="Confirm" type="object" name="request_limit_approval" confirm="Confirm?" states="draft" class="oe_highlight" />
                    <button string="Confirm" type="object" name="approve_credit" confirm="Confirm to approve order?" states="waiting-approval" class="oe_highlight" />
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
                
                <!-- UNCOMMENT IF USING Mail Track SYSTEM -->
                <!--<div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>-->
            </form>
        </field>
    </record>
    action_confirm


    <record model="ir.ui.view" id="view_order_form">
        <field name="name">Sale Order View Form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//header/button[@id='action_confirm']" position="after">
                <button name="action_confirm" id="action_confirm" string="Approve Credit" class="btn-primary" type="object" attrs="{'invisible': [('state', 'not in', ['waiting-approval'])]}" groups="sales_team.group_sale_manager"/>
            </xpath>
        </field>
    </record>
</odoo>