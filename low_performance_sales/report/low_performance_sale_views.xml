<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="low_performance_sale_view_pivot" model="ir.ui.view">
        <field name="name">low.performance.sale.view.pivot</field>
        <field name="model">low.performance.sale</field>
        <field name="arch" type="xml">
            <pivot string="Low Performance Sales" disable_linking="True">
                <field name="product_id" type="row"/>
                <field name="sold_qty" type="col"/>
                <field name="revenue" type="col"/>
            </pivot>
        </field>
    </record>
    <record id="action_low_performance_sale" model="ir.actions.act_window">
        <field name="name">Low Performance Sale</field>
        <field name="res_model">low.performance.sale</field>
        <field name="view_mode">pivot</field>
        <field name="view_id"></field>  <!-- force empty -->
        <field name="context">{}</field>
        <field name="help">This report show low performance sales of certain products</field>
    </record>
</odoo>
