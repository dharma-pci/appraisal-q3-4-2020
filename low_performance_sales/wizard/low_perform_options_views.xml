<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="low_perform_options_view_form" model="ir.ui.view">
        <field name="name">low.perform.options.view.form</field>
        <field name="model">low.perform.options</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field invisible="1" name="state_x"/>
                    <group attrs="{'invisible': [('state_x', '!=', 'choose')]}">
                        <group>
                            <field name="report_type" required="1"/>
                            <field name="date_from" required="1"/>
                            <field name="date_to" required="1"/>
                            <field name="critical_level_qty" required="1"/>
                            <field name="critical_level_currency" required="1"/>
                        </group>
                        <group>
                            <h1>Filters</h1>
                            <field name="product_categ_id"/>
                            <field name="sale_team_ids" widget="many2many_tags"/>
                            <field name="country_id"/>
                        </group>
                    </group>
                    <group attrs="{'invisible':[('state_x','!=','get')]}">
                        <separator colspan="4" string="Generate to Excel done. Download by click link below" attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <br/>
                        <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')], 'readonly':[('state_x','=','get')]}"/>
                    </group>
                    <footer attrs="{'invisible':[('state_x','=','get')]}">
                        <button string="Show in Odoo"
                                name="generate_report_odoo"
                                type="object"
                                class="oe_highlight"/>
                        <button string="Export as XLSX"
                                name="generate_report_excel"
                                type="object"
                                class="oe_highlight"/>
                        <button string="Cancel"
                                special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
