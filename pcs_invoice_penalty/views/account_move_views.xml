<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">account.move.form.inherit.penalty</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button name="action_view_penalty_invoice"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-pencil-square-o"
                        attrs="{'invisible': [('penalty_invoice_count', '=', 0)]}">
                        <field name="penalty_invoice_count" widget="statinfo" string="Penalty Invoices"/>
                    </button>
                </div>
                <field name="ref" position="after">
                    <field name="penalty_invoice_id" attrs="{'invisible': [('penalty_invoice_id', '=', False)]}" readonly="1" />
                </field>
            </field>
        </record>
    </data>
</odoo>