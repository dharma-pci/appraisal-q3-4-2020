<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.penalty</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='account']/div[hasclass('o_settings_container')][2]" position="after">
                    <h2>Invoice Penalty</h2>
                    <div class="row mt16 o_settings_container" id="invoice_penalty">
                        <div class="col-12 col-lg-6 o_setting_box" title="Invoice penalty configuration.">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="penalty_type" class="col-lg-3 o_light_label"/>
                                        <field name="penalty_type" />
                                    </div>
                                    <div class="row" attrs="{'invisible': [('penalty_type', 'not in', ('amount'))]}">
                                        <label for="penalty_amount" class="col-lg-3 o_light_label"/>
                                        <field name="penalty_amount" />
                                    </div>
                                    <div class="row" attrs="{'invisible': [('penalty_type', 'not in', ('percent'))]}">
                                        <label for="penalty_amount_percent" class="col-lg-3 o_light_label"/>
                                        <field name="penalty_amount_percent" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" >
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16" attrs="{'invisible': [('penalty_type', '=', False)]}">
                                        <label for="penalty_due_date" class="col-lg-3 o_light_label"/>
                                        <field name="penalty_due_date" attrs="{'required': [('penalty_type', '!=', False)]}" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" >
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16" attrs="{'invisible': [('penalty_type', '=', False)]}">
                                        <label for="penalty_product_id" class="col-lg-3 o_light_label"/>
                                        <field name="penalty_product_id" attrs="{'required': [('penalty_type', '!=', False)]}" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>