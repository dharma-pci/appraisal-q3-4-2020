<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_cron_penalty_invoice" model="ir.cron">
        <field name="name">Penalty Invoice</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')" />
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_account_move"/>
        <field name="code">model.get_penalty_invoice()</field>
        <field name="state">code</field>
    </record>
</odoo>
