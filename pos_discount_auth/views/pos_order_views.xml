<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_pos_pos_form" model="ir.ui.view">
            <field name="name">Pos Order Approval manager</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
            <!-- Approval manager field -->
                <xpath expr="//field[@name='lines']/tree/field[@name='price_subtotal_incl']" position="after">
                    <field name="manager_disc_approval"/>
                </xpath>
                <xpath expr="//field[@name='lines']/form/group/field[@name='notice']" position="after">
                    <field name="manager_disc_approval"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>