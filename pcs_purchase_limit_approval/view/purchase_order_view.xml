<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="purchase_order_form_view_inherit" model="ir.ui.view">
        <field name="name">purchase.order.form.view.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_order']" position="after">
                <field name="approver_id" attrs="{'invisible':[('state','in',['draft'])]}"/>
            </xpath>
        </field>
    </record>

    <record id="action_purchase_to_approve" model="ir.actions.act_window">
        <field name="name">Purchase To Approve</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.order</field>
        <field name="view_mode">tree,kanban,form,pivot,graph,calendar,activity</field>
        <field name="view_id" ref="purchase.purchase_order_tree"/>
        <field name="domain">[('state','in',['to approve'])]</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="purchase.view_purchase_order_filter"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Approve RFQ to Purchase Order
            </p><p>
            The quotation contains the history of the discussion
            you had with your vendor.
            </p>
        </field>
    </record>

    <menuitem
        id="purchase_menu_purchase_approve"
        name="Purchase To Approve"
        action="action_purchase_to_approve"
        parent="purchase.menu_procurement_management"
        sequence="7"/>
</odoo>