<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="assign_pricelist_wizard_form_view" model="ir.ui.view">
        <field name="name">assign_pricelist_wizard_form_view</field>
        <field name="model">assign.pricelist.wizard</field>
        <field name="arch" type="xml">
            <form string="Assign Pricelist">
                <group>
                    <group>
                        <field name="pricelist_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <footer>
                    <button name="assign_pricelist" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_view_assign_pricelist_wizard" model="ir.actions.act_window">
        <field name="name">Assign Pricelist</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">assign.pricelist.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="groups_id" eval="[(4,ref('sales_team.group_sale_manager'))]"/>
        <field name="binding_model_id" ref="base.model_res_partner" />
        <field name="binding_view_types">list</field>
    </record>
</odoo>
