<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_partner_property_form" model="ir.ui.view">
        <field name="name">pcs_pricelist_restriction.view_partner_property_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="product.view_partner_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='property_product_pricelist']" position="after">
             	<field name="partner_pricelist_ids" widget="many2many_tags" groups="sales_team.group_sale_manager"/>
            </xpath>
        </field>
    </record>

    <record id="action_reset_partner_pricelist" model="ir.actions.server">
        <field name="name">Reset Pricelist</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="groups_id" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.action_reset_pricelist()
        </field>
    </record>
</odoo>
