<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="merge_picking_form" model="ir.ui.view">
		<field name="name">Merge Picking</field>
		<field name="model">merge.picking</field>
		<field name="arch" type="xml">
			<form string="Merge Picking">
				<p class="oe_grey">
					Picking will be created with all the selected picking.
				</p>
				<group>
					<div>
						<field name="picking_ids" nolabel='1'/>
					</div>
				</group>
				<footer>
					<button name="merge_picking" string="Merge Pickings" type="object" class="btn-primary"/>
					<button string="Cancel" class="btn-secondary" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>
	
	<record id="action_merge_picking" model="ir.actions.act_window">
		<field name="name">Merge Picking</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">merge.picking</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
		<!-- TODO: check if we need this -->
		<field name="binding_model_id" ref="stock.model_stock_picking" />
        <field name="binding_view_types">list</field>
	</record>
</odoo>