<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_invoice_form_inherit_hr_timesheet_invoice" model="ir.ui.view">
        <field name="name">project.project.view.form.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="hr_timesheet.project_invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='timesheet_settings']" position="after">
                <div class="col-lg-6 o_setting_box" id="allow_invoice">
                    <div class="o_setting_left_pane">
                        <field name="allow_invoice"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="allow_invoice" string="Invoice"/>
                        <div class="text-muted">
                            Invoice timesheet
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
