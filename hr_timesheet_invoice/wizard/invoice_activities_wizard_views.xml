<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="invoice_activities_wizard_view_form" model="ir.ui.view">
        <field name="name">invoice.activities.wizard.view.form</field>
        <field name="model">invoice.activities.wizard</field>
        <field name="arch" type="xml">
            <form string="Invoice Activities">
                <sheet>
                    <div>Invoice will be created in draft so that you can review them before validation.</div>
                    <group string="Filters">
                        <group>
                            <field name="project_ids" widget="many2many_tags"/>
                            <field name="date_from" />
                        </group>
                        <group>
                            <field name="partner_ids" widget="many2many_tags"/>
                            <field name="date_to" />
                        </group>
                    </group>
                    <group string="Options">
                        <group>
                            <field name="groupby_project" />
                            <field name="add_timesheet_date" />
                        </group>
                        <group>
                            <field name="groupby_partner" />
                            <field name="add_timesheet_desc" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="create_invoices" string="Create and View Invoices" type="object"
                        context="{'open_invoices': True}" class="btn-primary"/>
                    <button name="create_invoices" string="Create Invoices" type="object"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="invoice_activities_wizard_action" model="ir.actions.act_window">
        <field name="name">Invoice Activities</field>
        <field name="res_model">invoice.activities.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="invoice_timesheet_menu"
        name="Invoice Timesheet"
        parent="hr_timesheet.timesheet_menu_root"
        sequence="10"/>

    <menuitem
        id="invoice_activities_menu"
        name="Invoice Activities"
        action="invoice_activities_wizard_action"
        parent="invoice_timesheet_menu"
        sequence="5"/>

</odoo>
