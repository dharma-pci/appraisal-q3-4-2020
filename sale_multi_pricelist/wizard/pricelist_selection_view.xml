<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pricelist_selection_view_form" model="ir.ui.view">
        <field name="name">pricelist.selection.view.form</field>
        <field name="model">pricelist.selection</field>
        <field name="arch" type="xml">
            <form string="Pricelist Selection">
                <sheet>
                    <field name="sale_line_id" invisible="1"/>
                    <field name="pricelist_id" invisible="1"/>
                    <notebook>
                        <page name="select_pricelist" string="Select Pricelist">
                            <field name="line_ids" readonly="1" delete="0">
                                <tree limit="40">
                                    <field name="pricelist_id"/>
                                    <button name="action_apply" string="Apply" class="btn btn-light" type="object"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_save" string="Save" type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
