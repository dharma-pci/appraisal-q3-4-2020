<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sale.order.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[@name='order_lines']/field[@name='order_line']" position="attributes">
                <attribute name="context">{'default_pricelist_id': pricelist_id}</attribute>
            </xpath>
            <xpath expr="//sheet/notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='price_total']" position="after">
                <field name="pricelist_id" invisible="1"/>
                <button name="action_select_pricelist" string="Apply" type="object" attrs="{'invisible': [('state', 'not in', ['draft', 'sent'])]}"
                    groups="sales_team.group_sale_manager"/>
            </xpath>
        </field>
    </record>
</odoo>
